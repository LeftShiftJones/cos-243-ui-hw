<div id="reset-pw-page">
    <div class="row">
        <div class="col-8">
            <sign-up-static-heading></sign-up-static-heading>

            <instructions details="Sign up for our cool web site."></instructions>

            <div v-if="errors.length">
                <h2>There are errors on this form:</h2>
                <error-msge
                        v-for="(error, idx) in errors"
                        v-bind:severity="error.severity"
                        v-bind:msge="error.msge"
                        v-bind:key="idx + 1">
                </error-msge>
            </div>

            <form id="pw-reset-form" method="POST">
                <div class="form-group">
                    <label for="password">Old Password</label>
                    <input class="form-control" id="password" name="old_password"
                           type="password" placeholder="Non-trivial password"
                           v-model="password" required>
                    <label for="password">New Password</label>
                    <input class="form-control" id="password" name="new_password"
                           type="password" placeholder="Non-trivial password"
                           v-model="password" required>
                    <label for="password">Confirm Password</label>
                    <input class="form-control" id="password" name="pw_confirm"
                           type="password" placeholder="Non-trivial password"
                           v-model="password" required>
                </div>
                <input class="btn btn-primary" type="submit" value="Submit" disabled>
            </form>
        </div>
        <div class="col-4">
            <h2>Cheat Sheet</h2>
            <ul>
                <li>Old: \{{ old_password }}</li>
                <li>New: \{{ new_password }}</li>
                <li>Confirm: \{{ pw_confirm}}</li>
            </ul>
        </div>
    </div>
</div>

<script src="/public/sign-up.js"></script>
